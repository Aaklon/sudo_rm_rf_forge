generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(uuid())
  name       String
  email      String @unique
  rollNumber String @unique
  password   String @map("password_hash") // Storing bcrypt hash
  seats      Seat[]
}

model Seat {
  id                 String    @id @default(uuid())
  seatNumber         String    @unique
  floorNumber        Int
  startTime          DateTime?
  expiryTime         DateTime?
  status             String    @default("FREE")
  bookedByRollNumber String?
  bookedBy           User?     @relation(fields: [bookedByRollNumber], references: [rollNumber])
}
